{
    "name": "pawn-community-tool",
    "displayName": "Pawn Community Tool",
    "description": "Pawn Tool for Developing Scripts for Indian Ocean Roleplayâ„¢",
    "version": "1.36.0",
    "publisher": "IORP",
    "engines": {
        "vscode": "^1.34.0"
    },
    "bugs": {
        "url": "https://github.com/oceanroleplay/pawn-community-tool/issues",
        "email": "indianoceanroleplay@gmail.com"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/oceanroleplay/pawn-community-tool.git"
    },
    "icon": "iorp.png",
    "categories": [
        "Programming Languages",
        "Formatters",
        "Snippets",
        "Other"
    ],
    "keywords": [
        "iorp",
        "India",
        "multiplayer",
        "Ocean",
        "Roleplay",
        "samp",
        "vscode",
        "pawn",
        "language",
        "new"
    ],
    "activationEvents": [
        "onCommand:pawn-community-tool.initTask",
        "onLanguage:pawn"
    ],
    "main": "./out/client/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "pawn",
                "aliases": [
                    "Pawn",
                    "pawn"
                ],
                "extensions": [
                    ".p",
                    ".pwn",
                    ".inc"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "pawn",
                "scopeName": "source.pawn",
                "path": "./syntaxes/Pawn.tmLanguage"
            }
        ],
        "configuration": {
            "id": "pawn",
            "type": "object",
            "title": "pawn Configuration",
            "properties": {
                "pawn.language.reparseInterval": {
                    "type": "number",
                    "default": 1500,
                    "description": "The shortest allowed interval between two syntax re-parses of the same file"
                },
                "pawn.language.webApiLinks": {
                    "type": "boolean",
                    "default": false,
                    "description": "Should #include statements that contain filenames from pawn package link to the Web API Reference"
                },
                "pawn.compiler.executablePath": {
                    "type": "string",
                    "default": "",
                    "description": "Compiler location"
                },
                "pawn.compiler.includePaths": {
                    "type": "array",
                    "default": [],
                    "description": "An array of strings containing include paths for the compiler"
                },
                "pawn.compiler.options": {
                    "type": "array",
                    "default": [],
                    "description": "An array of additional options that should be passed to the compiler"
                },
                "pawn.compiler.showInfoMessages": {
                    "type": "boolean",
                    "default": false,
                    "description": "Shows additional information like command arguments and exit code when compiling"
                },
                "pawn.compiler.reformatOutput": {
                    "type": "boolean",
                    "default": true,
                    "description": "Should pawnpc output be reformatted to make it more readable"
                },
                "pawn.compiler.outputType": {
                    "type": "string",
                    "default": "source",
                    "description": "Where should .pawn files be output. Can be:\n  - 'source' (same as input)\n  - 'path' (specified in pawn.compiler.outputPath setting)",
                    "enum": [
                        "source",
                        "path"
                    ]
                },
                "pawn.compiler.outputPath": {
                    "type": "string",
                    "default": "",
                    "description": "If pawn.compiler.outputType is set to 'path', then use this path to output .pawn files"
                },
                "pawn.compiler.switchToOutput": {
                    "type": "boolean",
                    "default": true,
                    "description": "Switch to 'Output' tab on build"
                }
            }
        },
        "problemMatchers": [
            {
                "name": "pawncc",
                "owner": "pawn",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}/gamemodes"
                ],
                "pattern": {
                    "regexp": "^(.*?)\\(([0-9]*)[- 0-9]*\\) \\: (fatal error|error|warning) [0-9]*\\: (.*)$",
                    "file": 1,
                    "location": 2,
                    "severity": 3,
                    "message": 4
                }
            }
        ],
        "commands": [
            {
                "command": "pawn-community-tool.initTask",
                "title": "Initialize Pawn Build Task"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "build:snippets": "ts-node scripts/generateSnippets.ts",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test",
        "publish": "vsce publish minor"
    },
    "dependencies": {
        "@types/json5": "^2.2.0",
        "@types/minimatch": "^3.0.3",
        "@types/vscode": "^1.53.0",
        "fs": "0.0.1-security",
        "js-beautify": "^1.13.5",
        "json-concat": "0.0.1",
        "json-merger": "^1.1.5",
        "json5": "^2.2.0",
        "minimatch": "^3.0.4",
        "path": "^0.12.7",
        "vscode-languageclient": "^7.0.0",
        "vscode-languageserver": "^7.0.0",
        "vscode-languageserver-textdocument": "^1.0.1"
    },
    "devDependencies": {
        "@types/js-beautify": "^1.13.1",
        "@types/node": "^13.13.41",
        "vscode": "^1.1.37"
    }
}
